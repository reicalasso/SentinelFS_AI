# Environment Configuration Template
# Copy this file to .env and customize for your environment

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=SentinelZer0
APP_VERSION=3.8.0
ENVIRONMENT=production  # development, staging, production
LOG_LEVEL=info  # debug, info, warning, error, critical
DEBUG=false

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_SECRET_KEY=your-secret-key-here-change-me
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Model Configuration
# ============================================================================
MODEL_PATH=/models/production/trained_model.pt
MODEL_DEVICE=cuda  # cpu, cuda, mps
MODEL_BATCH_SIZE=32
MODEL_MAX_LENGTH=512
MODEL_CONFIDENCE_THRESHOLD=0.75

# ============================================================================
# Data Paths
# ============================================================================
DATA_PATH=/data
LOG_PATH=/logs
CHECKPOINT_PATH=/app/checkpoints
CACHE_PATH=/app/cache

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================================================
# Prometheus Monitoring
# ============================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_PUSH_GATEWAY=localhost:9091

# ============================================================================
# Grafana Configuration
# ============================================================================
GRAFANA_HOST=grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=sentinelzer0  # CHANGE THIS!

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT_NAME=sentinelzer0
MLFLOW_ARTIFACT_ROOT=/mlflow/artifacts

# ============================================================================
# Elasticsearch Configuration (Optional)
# ============================================================================
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_INDEX=sentinelzer0-logs

# ============================================================================
# Security Settings
# ============================================================================
SECURITY_YARA_RULES_PATH=/data/yara_rules
SECURITY_SCAN_TIMEOUT=300
SECURITY_MAX_FILE_SIZE=104857600  # 100MB
SECURITY_ALLOWED_EXTENSIONS=.py,.js,.sh,.ps1,.bat

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# ============================================================================
# Training Configuration
# ============================================================================
TRAINING_ENABLED=false
TRAINING_BATCH_SIZE=16
TRAINING_LEARNING_RATE=0.0001
TRAINING_NUM_EPOCHS=10
TRAINING_SAVE_FREQUENCY=1

# ============================================================================
# Adversarial Robustness
# ============================================================================
ADVERSARIAL_TRAINING_ENABLED=true
ADVERSARIAL_EPSILON=0.1
ADVERSARIAL_ATTACK_METHOD=pgd  # fgsm, pgd, cw, boundary
ADVERSARIAL_NUM_STEPS=10

# ============================================================================
# Online Learning
# ============================================================================
ONLINE_LEARNING_ENABLED=false
ONLINE_LEARNING_BUFFER_SIZE=10000
ONLINE_LEARNING_UPDATE_FREQUENCY=100

# ============================================================================
# Performance Tuning
# ============================================================================
NUM_WORKERS=4
PREFETCH_FACTOR=2
PIN_MEMORY=true
TORCH_THREADS=8

# ============================================================================
# Database Configuration (Optional)
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/sentinelzer0
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# Monitoring & Alerting
# ============================================================================
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_HOST=smtp.gmail.com
ALERT_EMAIL_PORT=587
ALERT_EMAIL_USER=your-email@gmail.com
ALERT_EMAIL_PASSWORD=your-password
ALERT_EMAIL_RECIPIENTS=admin@example.com,security@example.com

ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_STREAMING=true
FEATURE_ENSEMBLE=true
FEATURE_EXPLAINABILITY=true
FEATURE_ADVERSARIAL_DETECTION=true
FEATURE_AUTO_RETRAINING=false

# ============================================================================
# Resource Limits
# ============================================================================
MAX_MEMORY_GB=16
MAX_CPU_PERCENT=80
MAX_GPU_MEMORY_GB=8

# ============================================================================
# Backup & Recovery
# ============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily  # hourly, daily, weekly
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups
